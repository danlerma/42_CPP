#··············································································#
#                                   NAMES                                      #
#··············································································#

NAME = replace

#··············································································#
#                                    SRCS                                      #
#··············································································#

SRCS = main.cpp utils.cpp
OBJS = $(SRCS:%.cpp=%.o)

#··············································································#
#                                    FLAGS                                     #
#··············································································#

CXX = clang++
CXXFLAGS = -Wall -Werror -Wextra

#··············································································#
#                                    RULES                                     #
#··············································································#

.PHONY: all re clean fclean

all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $^ -o $@

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -rf $(OBJS)

fclean: clean
	rm -rf $(NAME)

re: fclean all
