#··············································································#
#                                   NAMES                                      #
#··············································································#

NAME = zombie

#··············································································#
#                                    SRCS                                      #
#··············································································#

SRCS = main.cpp Zombie.cpp newZombie.cpp randomChump.cpp
OBJS = $(SRCS:%.cpp=%.o)

#··············································································#
#                                    FLAGS                                     #
#··············································································#

CC = clang++
CXXFLAGS = -Wall -Werror -Wextra

#··············································································#
#                                    RULES                                     #
#··············································································#

.PHONY: all re clean fclean

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CXXFLAGS) $^ -o $@

%.o: %.cpp
	$(CC) $(CXXFLAGS) -c $< -o $@

clean:
	rm -rf $(OBJS)

fclean: clean
	rm -rf $(NAME)

re: fclean all
